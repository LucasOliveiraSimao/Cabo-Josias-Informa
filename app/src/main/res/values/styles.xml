<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardBackgroundColor">@color/on_tertiary</item>
    </style>

    <style name="CustomTextView" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/radio_canada_big_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="CustomTextViewBiography" parent="CustomTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProjectTitleText">
        <item name="android:textSize">@dimen/text_size_title_project_details</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/default_margin_project_details</item>
    </style>

    <style name="ProjectDescriptionText">
        <item name="android:textSize">@dimen/text_size_description_project_details</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:layout_margin">@dimen/default_margin_project_details</item>
    </style>

    <style name="ImageBiography">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_layout_height_biography</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="HomeImage">
        <item name="android:layout_width">@dimen/biography_image_layout_width</item>
        <item name="android:layout_height">@dimen/biography_image_layout_height</item>
        <item name="android:src">@drawable/ic_person</item>
    </style>

    <style name="HomeTextView" parent="CustomTextView">
        <item name="android:gravity">center</item>
    </style>

    <style name="MeetingTextView" parent="CustomTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProjectItemTextView" parent="CustomTextView">
        <item name="android:gravity">center</item>
    </style>

    <style name="ShareImg">
        <item name="android:layout_width">@dimen/img_size_share_meeting</item>
        <item name="android:layout_height">@dimen/img_size_share_meeting</item>
        <item name="android:src">@drawable/ic_share</item>
    </style>
</resources>