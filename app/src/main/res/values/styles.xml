<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardBackgroundColor">@color/on_tertiary</item>
    </style>

    <style name="CustomTextView" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/radio_canada_big_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProblemDescriptionText">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="ProblemEditText">
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="ProblemButton">
        <item name="android:drawableTop">@drawable/ic_camera</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/button_square_background</item>
    </style>

    <style name="SendButton">
        <item name="android:background">@color/on_tertiary</item>
    </style>

    <style name="ProjectTitleText">
        <item name="android:textSize">@dimen/text_size_title_project_details</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/default_margin_project_details</item>
    </style>

    <style name="ProjectDescriptionText">
        <item name="android:textSize">@dimen/text_size_description_project_details</item>
        <item name="android:layout_margin">@dimen/default_margin_project_details</item>
    </style>
</resources>